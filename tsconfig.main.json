{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["src/main/**/*"],
  "exclude": ["src/renderer/**/*", "node_modules", "dist"]
}